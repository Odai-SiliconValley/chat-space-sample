.chat-main
  
  .chat-main__group-info
    .chat-main__group-info__left-box
      %h2.chat-main__group-info__left-box__current
        = @group.name
      %ul.chat-main__group-info__left-box__list
        Member:
        %li.chat-main__group-info__left-box__list__Member
          - @group.users.each do |user|
            = user.name
    %p.chat-main__group-info__left-box__edit-btn
      = link_to edit_group_path(@group) do
        Edit
  
  .chat-main__messages-list
    = render @messages
  
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'